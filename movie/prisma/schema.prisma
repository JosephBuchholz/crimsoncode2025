// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  email    String    @unique
  name     String
  password String
  sessions Session[]

  ratings UserRating[]
  genres  UserGenre[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

enum FilmType {
  movie
  tv
}

model UserRating {
  userId  String
  tmdbId  Int
  type    FilmType
  genreId Int
  rating  Rating

  genre Genre @relation(references: [id], fields: [genreId])

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@id([userId, tmdbId])
}

enum Rating {
  positive
  unrated
  negative
}

model UserGenre {
  userId  String
  genreId Int

  genre Genre @relation(fields: [genreId], references: [id])
  user  User  @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@id([userId, genreId])
}

model Genre {
  id          Int          @id @default(autoincrement())
  name        String
  tmdbMovieId Int
  tmdbTvId    Int
  UserGenre   UserGenre[]
  UserRating  UserRating[]
}
